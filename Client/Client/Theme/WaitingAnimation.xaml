<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Storyboard x:Key="WaitingAnimation">
        <StringAnimationUsingKeyFrames Storyboard.TargetName="WaitingTextBlock" Storyboard.TargetProperty="(TextBlock.Text)" RepeatBehavior="Forever">
            <DiscreteStringKeyFrame KeyTime="0:0:0.4" Value="Waiting"/>
            <DiscreteStringKeyFrame KeyTime="0:0:0.8" Value="Waiting."/>
            <DiscreteStringKeyFrame KeyTime="0:0:1.2" Value="Waiting.."/>
            <DiscreteStringKeyFrame KeyTime="0:0:1.6" Value="Waiting..."/>
            <DiscreteStringKeyFrame KeyTime="0:0:2" Value="Waiting"/>
        </StringAnimationUsingKeyFrames>
    </Storyboard>
</ResourceDictionary>