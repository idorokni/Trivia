<UserControl x:Class="Client.MVVM.View.HighScoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.MVVM.View" 
             xmlns:viewmodel="clr-namespace:Client.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:HighScoreViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="30"
            Background="#47A025">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="30"
                           FontWeight="SemiBold">
                    <Run Text="{Binding FirstScore.Item1}"/>
                    <Run Text="-"/>
                    <Run Text="{Binding FirstScore.Item2}"/>
                </TextBlock>

                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="30"
                           FontWeight="SemiBold">
                    <Run Text="{Binding SecondScore.Item1}"/>
                    <Run Text="-"/>
                    <Run Text="{Binding SecondScore.Item2}"/>
                </TextBlock>

                <TextBlock Grid.Row="2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="30"
                           FontWeight="SemiBold">
                    <Run Text="{Binding ThirdScore.Item1}"/>
                    <Run Text="-"/>
                    <Run Text="{Binding ThirdScore.Item2}"/>
                </TextBlock>

                <TextBlock Grid.Row="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="30"
                           FontWeight="SemiBold">
                    <Run Text="{Binding FourthScore.Item1}"/>
                    <Run Text="-"/>
                    <Run Text="{Binding FourthScore.Item2}"/>
                </TextBlock>

                <TextBlock Grid.Row="4"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="30"
                           FontWeight="SemiBold">
                    <Run Text="{Binding FifthScore.Item1}"/>
                    <Run Text="-"/>
                    <Run Text="{Binding FifthScore.Item2}"/>
                </TextBlock>
            </Grid>

            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"
                       FontSize="40"
                       Text="HIGH SCORES">
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
